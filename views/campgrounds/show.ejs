<% layout('layouts/boilerplate.ejs') %> 

    <div class="row mb-5">
        <div class="col-6 offset-3">
            <div class="card">
                <img src="<%= mainData.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= mainData.title %> </h5>
                  <p class="card-text"><%= mainData.description %> </p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><b>Price : $</b><%= mainData.price %> </li>
                  <li class="list-group-item text-muted"><%= mainData.location %> </li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%= mainData._id %>/edit" class="card-link btn btn-primary">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%= mainData._id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger">Delete Campground</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    2 Days ago
                </div>
              </div>

              <h2 class="mt-3">Leave a Review</h2>
              <form action="">
                  <div class="mb-3">
                      <label class="form-label" for="rating">Rating</label>
                      <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                  </div>
                  <div class="mb-3">
                      <label class="form-label" for="body">Review</label>
                      <textarea class="form-control" name="review[body]" id="body" cols="30" rows="5" placeholder="Add Your Review Here...."></textarea>
                  </div>
                  <button class="btn btn-success">Add Review</button>
              </form>
        </div>
    </div>
