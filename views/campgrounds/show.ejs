<% layout('layouts/boilerplate.ejs') %> 

    <div class="row mb-5">
        <div class="col-sm-6">
            <div class="card">
                <img src="<%= mainData.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= mainData.title %> </h5>
                  <p class="card-text"><%= mainData.description %> </p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><b>Price : $</b><%= mainData.price %> </li>
                  <li class="list-group-item text-muted"><%= mainData.location %> </li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%= mainData._id %>/edit" class="card-link btn btn-primary">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%= mainData._id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger">Delete Campground</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    2 Days ago
                </div>
              </div>              
        </div>
        <div class="col-sm-6">
            <h2 class="mt-3">Leave a Review</h2>

              <form action="/campgrounds/<%= mainData._id %>/reviews" method="post" class="mb-3 validated-form" novalidate>
                  <div class="mb-3">
                      <label class="form-label" for="rating">Rating</label>
                      <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                  </div>
                  <div class="mb-3">
                      <label class="form-label" for="body">Review</label>
                      <textarea class="form-control" name="review[body]" id="body" cols="30" rows="5" required placeholder="Add Your Review Here...."></textarea>
                      <div class="valid-feedback">
                          Looks good
                      </div>
                  </div>
                  <button class="btn btn-success">Add Review</button>
              </form>

              <% for(let review of mainData.reviews){ %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"> Rating : <%= review.rating %> </h5>
                        <p class="card-text">Text : <%= review.body %> </p>
                        <form action="/campgrounds/<%= mainData._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-dm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
              <% } %> 
        </div>
    </div>
